{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "module": "ESNext",
    "pretty": true,
    "noEmit": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
